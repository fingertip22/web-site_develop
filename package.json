{
  "name": "web-site_develop",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "config": {
    "srcHtmlBase": "./src/pug",
    "srcHtml": "./src/pug/pages",
    "distHtml": "./dist/",
    "srcCss": "./src/scss/object/project",
    "distCss": "./dist/assets/css/",
    "srcPostCss": "./dist/assets/css/**/*.css",
    "watchSrcCss": "./src/scss",
    "srcImg": "./src/img/**/*.{jpg,jpeg,png,gif,svg}",
    "distImg": "./dist/assets/img"
  },
  "scripts": {
    "start": "npm-run-all --parallel server watch",
    "dev": "npm-run-all --parallel server watchAll",
    "prod": "npm-run-all --parallel prod:*",
    "prod:pug": "npm run build:pug --initial",
    "prod:css": "run-s css:*",
    "prod:webpack": "webpack --config webpack.prod.js",
    "build": "npm-run-all --parallel build:*",
    "build:pug": "pug $npm_package_config_srcHtml -b $npm_package_config_srcHtmlBase --hierarchy -o $npm_package_config_distHtml -P",
    "build:webpack": "webpack --config webpack.dev.js",
    "build:css": "run-s css:*",
    "css:scss": "sass $npm_package_config_srcCss:$npm_package_config_distCss --style=compressed --no-source-map",
    "css:postcss": "postcss $npm_package_config_srcPostCss -u autoprefixer css-mqpacker -replace $npm_package_config_distCss --no-map",
    "build:img": "npm run img:imagemin",
    "img:imagemin": "node imagemin.mjs",
    "server": "browser-sync start --config bs-config.js",
    "watch": "npm-run-all --parallel watch:pug watch:css watch:img",
    "watchAll": "npm-run-all --parallel watch:*",
    "watch:pug": "chokidar $npm_package_config_srcHtmlBase -c 'npm run build:pug' --watch",
    "watch:css": "chokidar $npm_package_config_watchSrcCss -c 'npm run build:css' --watch",
    "watch:webpack": "webpack --config webpack.dev.js --watch",
    "watch:img": "chokidar $npm_package_config_srcImg -c 'npm run build:img' --watch",
    "lintFix": "eslint --fix $npm_package_config_srcJs && prettier --write $npm_package_config_srcJs"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.23.9",
    "@babel/core": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "@splidejs/splide": "^4.1.4",
    "@types/micromodal": "^0.3.5",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "autoprefixer": "^10.4.18",
    "babel-loader": "^9.1.3",
    "browser-sync": "^3.0.2",
    "chokidar-cli": "^3.0.0",
    "core-js": "^3.36.0",
    "css-mqpacker": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-webpack-plugin": "^4.0.1",
    "imagemin-gifsicle": "^7.0.0",
    "imagemin-keep-folder": "^5.3.2",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^9.0.2",
    "imagemin-svgo": "^10.0.1",
    "imagemin-webp": "^8.0.0",
    "micromodal": "^0.4.10",
    "mini-css-extract-plugin": "^2.8.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.35",
    "postcss-cli": "^11.0.0",
    "prettier": "^3.2.5",
    "pug": "^3.0.2",
    "pug-cli": "github:pugjs/pug-cli#master",
    "sass": "^1.71.1",
    "terser-webpack-plugin": "^5.3.10",
    "ts-loader": "^9.5.1",
    "typescript": "^5.4.2",
    "webpack": "^5.90.3",
    "webpack-cli": "^5.1.4",
    "webpack-merge": "^5.10.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "ios >= 15",
    "android >= 11",
    "not dead",
    "not ie 11"
  ]
}
